resource "digitalocean_firewall" "gemini-1a-firewall-1" {
  name = "gemini-1a-firewall-1"


  // looks like digital ocean do not support more than 10 droplets in a single firewall
  droplet_ids = flatten([
    slice([for droplet in digitalocean_droplet.gemini-1a: droplet.id], 0, 6),
    [digitalocean_droplet.gemini-1a-temp.id]])

  inbound_rule {
    protocol         = "tcp"
    port_range       = "22"
    source_addresses = ["0.0.0.0/0"]
  }

  inbound_rule {
    protocol         = "tcp"
    port_range       = "80"
    source_addresses = ["0.0.0.0/0"]
  }

  inbound_rule {
    protocol         = "tcp"
    port_range       = "443"
    source_addresses = ["0.0.0.0/0"]
  }

  inbound_rule {
    protocol         = "tcp"
    port_range       = "30333"
    source_addresses = ["0.0.0.0/0"]
  }

  outbound_rule {
    protocol              = "tcp"
    port_range            = "all"
    destination_addresses = ["0.0.0.0/0"]
  }

  outbound_rule {
    protocol              = "udp"
    port_range            = "all"
    destination_addresses = ["0.0.0.0/0"]
  }
}

